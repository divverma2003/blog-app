<div class="author">
    <h1 class="author__heading">Search Results</h1>
</div>

<section class="articles" style="background-color: var(--mint-sherbet);">
  <h2 class="articles__heading">Latest Posts</h2>
  <ul class="article-ul">
    <% data.forEach(post => { %>
      <li>
        <a href="/post/<%= post._id %>">
          <span class="article-title"><%= post.title %></span>
          <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
        </a>
      </li>
    <% }) %>
  </ul>

</section>