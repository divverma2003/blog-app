<a href="/dashboard">&larr; Back</a>
<div class="container">
<% if (locals.postStatus) { %>
  <div id = "card-login"class="card <%= locals.postStatus === 'success' ? 'card-success' : 'card-error' %>">
    <p><%= locals.postMessage %></p>
  </div>
  <% } %>
<div class="admin-title">
    <h2 class="author__heading">Add New Post</h2>
</div>

<form action="/add-post" class="centered-form" method="POST">
    <label for="title"><b>Title</b></label>
    <input name = "title" type="text"placeholder="Post Title">

    <label for="body"><b>Content</b></label>
    <textarea name = "body" cols="50" rows="10"></textarea>
    <input type="submit" value="Add" class="btn-cute">
</form>
</div>
