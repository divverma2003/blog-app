<div class="container">
    <% if (locals.postStatus) { %>
    <div id="card-login" class="card <%= locals.postStatus === 'success' ? 'card-success' : 'card-error' %>">
      <p><%= locals.postMessage %></p>
    </div>
  <% } %>
  <div class="admin-title" style="background-color: var(--baby-pink-beige);">
    <h2>Posts</h2>
    <a href="/add-post" class="btn-add">Add New +</a>
  </div>

  <ul class="admin-posts">
    <% data.forEach(post => { %>
      <li>
        <a href="/post/<%= post._id %>">
          <%= post.title %> &nearr;
        </a>

        <div class="admin-post-controls">
          <a class="btn-cute" href="/edit-post/<%= post._id %>">Edit</a>

          <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
            <input class="btn-delete" type="submit" value="Delete">
          </form>
        </div>
      </li>
    <% }) %>
  </ul>
</div>
